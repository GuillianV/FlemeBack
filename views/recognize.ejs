<script>


var text = "<%- text %>"
let pre = document.querySelector(".votre-texte p");
let exportedText = "";
let SplitText = text.split("/!:/");
    for (var line of SplitText){

        exportedText += line + " ";
        pre.insertAdjacentHTML("beforeend","<br>" )
        pre.insertAdjacentText("beforeend",line)
        pre.insertAdjacentHTML("beforeend","<br>" )
   
    };

let clipboard = document.querySelector(".clipboard");
clipboard.addEventListener("click", function(){
    copyToClipboard(exportedText)
    alert("Text copiÃ© dans le presse-papier");
})


const unsecuredCopyToClipboard = (text) => { const textArea = document.createElement("textarea"); textArea.value=text; document.body.appendChild(textArea); textArea.focus();textArea.select(); try{document.execCommand('copy')}catch(err){console.error('Unable to copy to clipboard',err)}document.body.removeChild(textArea)};

const copyToClipboard = (content) => {
  if (window.isSecureContext && navigator.clipboard) {
    navigator.clipboard.writeText(content);
  } else {
    unsecuredCopyToClipboard(content);
  }
};

